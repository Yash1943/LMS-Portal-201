<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
  </head>
  <body class="bg-gray-100">
    <div class="max-w-4xl mx-auto p-6">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Educator Dashboard</h1>
      <div class="bg-white p-6 rounded-lg shadow-md mb-6">
        <div class="flex flex-col sm:flex-row items-center justify-between">
          <h1 class="text-2xl sm:text-3xl font-semibold text-gray-600">Welcome to <%= name %></h1>
          <a
            class="mt-4 sm:mt-0 bg-red-600 hover:bg-red-800 text-white font-medium px-4 py-2 rounded w-full sm:w-auto"
            href="/signout">
            Logout
          </a>
        </div>
        <div class="flex flex-wrap justify-center sm:justify-start p-4">
          <a
            href="/createCourse"
            class="bg-blue-500 text-white w-full sm:w-48 m-2 font-medium px-4 py-2 rounded-md hover:bg-blue-600">
            Create A New Course
          </a>
          <a
            href="/my_courses"
            class="bg-blue-500 text-white w-full sm:w-48 m-2 font-medium px-4 py-2 rounded-md hover:bg-blue-600">
            My Courses
          </a>
          <a
            href="/educator_report"
            class="bg-blue-500 text-white w-full sm:w-48 m-2 font-medium px-4 py-2 rounded-md hover:bg-blue-600">
            View Report
          </a>
        </div>
      </div>
      <div class="max-w-7xl mx-auto">
        <hr class="border-black" />
      </div>
      <%- include('viewCourses.ejs') %>
    </div>
  </body>
</html>
