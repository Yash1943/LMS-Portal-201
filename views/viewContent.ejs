<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><% title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
  </head>
  <body>
    <div class="container mx-auto m-20 p-10 bg-white shadow-lg rounded-lg">
      <nav class="mb-4">
        <a
          href="/Educator_dashboard"
          class="text-blue-600 underline hover:text-blue-800 font-semibold text-lg">
          Educator Dashboard >
        </a>
        <a
          href="/viewcourse/<%= courseId %>"
          class="text-blue-600 underline hover:text-blue-800 font-semibold text-lg">
          Chapters >
        </a>
      </nav>
      <div class="mb-6"><%- include('header.ejs') %></div>
      <div class="mb-2 flex">
        <h1 class="text-2xl">Course : <%= course.name %></h1>
        <h2 class="text-2xl">[Chapter : <%= chapter.title %>]</h2>
      </div>
      <div class="mb-2">
        <% if (content.length === 0) { %>
          <p class="text-gray-500 text-xl">There is no content available.</p>
        <% } else { %>
        <% content.forEach(item => { %>
        <div class="content-item mb-4 ml-2 p-4 bg-white rounded shadow">
          <h3 class="text-xl font-bold">Title : <%= item.title %></h3>
          <p class="mt-2">Description : <%= item.description %></p>
        </div>

      </div>
      <div class="mb-4 flex  justify-between">
      <button onclick="markAsComplete(<%= item.id %>)" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
        markAsComplete
      </button>
      <button class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600">
        Goto next
      </button>
      </div>
      </div>
        <% }) %>
      
        <% } %>
    </div>
  </body>
</html>

