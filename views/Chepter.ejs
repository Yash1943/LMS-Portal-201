<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto m-20 p-10 bg-white shadow-lg rounded-lg">
      <div class="mb-6">
        <%- include('header.ejs') %>
      </div>

      <nav class="mb-6">
        <a
          href="/Educator_dashboard"
          class="text-blue-600 underline hover:text-blue-800 font-semibold text-lg">
          Educator Dashboard >
        </a>
      </nav>

      <div class="flex items-center justify-between p-6 bg-gray-50 rounded-lg">
        <div>
          <h1
            class="text-blue-600 hover:text-blue-800 font-semibold text-lg">
            <%= viewcourses.name %>
          </a>
        </div>
        <div class="flex space-x-4">
          <a href="#" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Edit</a>
          <a href="#" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700">Delete</a>
        </div>
      </div>

      <hr class="my-6 border-black" />

      <div class="mb-4">
        <a href="/viewcourse/<%= viewcourses.id %>/chapters/newchapter" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Create a new chapter</a>
        <h2 class="underline text-2xl font-semibold m-2 mb-4">Chapters</h2>
      </div>
      <div>
        <ul>
          <% chapters.forEach(chapter => { %>
            <li class="bg-white shadow-lg rounded-lg p-6 transition transform hover:scale-105 duration-300">
              <h3 class="text-2xl font-bold text-gray-800 mb-2"><%= chapter.title %></h3>
              <p class="text-gray-600 mb-4">Description: <%= chapter.description %></p>
              <div class="flex justify-between space-x-2">
                <a href="/viewcourse/<%= viewcourses.id %>/chapters/<%= chapter.id %>" class="bg-blue-500 text-white w-full font-medium px-4 py-2 rounded-md hover:bg-blue-600 mr-2 text-center">View Chapter</a>
                 <a href="/viewcourse/<%= viewcourses.id %>/chapters/<%= chapter.id %>/addcontent" class="bg-green-500 text-white w-full font-medium px-4 py-2 rounded-md hover:bg-green-600 text-center">Add content</a>
                <a href="/viewcourse/<%= viewcourses.id %>/chapters/<%= chapter.id %>/edit" class="bg-green-500 text-white w-full font-medium px-4 py-2 rounded-md hover:bg-green-600 text-center">Edit</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>
